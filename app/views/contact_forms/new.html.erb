<% semantic_form_for @contact_form, :url => contact_form_path do |f| %>
  <% f.inputs do %>
    <%= f.input :name, :label => 'Nombre y apellido' %>
    <%= f.input :email, :label => 'Email' %>
    <% f.inputs :class => 'field-group' do %>
      <%= f.input :telephone, :label => 'Teléfono' %>
      <%= f.input :birth_date, :label => 'Fecha de nacimiento', :required => false %>
    <% end %>

    <% f.inputs :name => 'En qué horarios te gustaría practicar?', :class => 'hours' do %>
        <% (8..21).each do |hour| %>
           <%= f.input "hour_#{hour}", :label => hour_label(hour), :as => :boolean, :required => false %>
        <% end %>
    <% end %>

    <% f.inputs :name => 'Elegí los temas de mayor interés para vos:', :class => 'interests' do %>
        <%= f.input :proffessional, :label => 'Formación Profesional', :as => :boolean, :required => false %>
        <%= f.input :companies, :label => 'Programas para empresas', :as => :boolean, :required => false %>
        <%= f.input :group, :label => 'Clases grupales', :as => :boolean, :required => false %>
        <%= f.input :personal, :label => 'Clases particulares', :as => :boolean, :required => false %>
        <%= f.input :material, :label => 'Material didáctico', :as => :boolean, :required => false %>
        <%= f.input :alimentation, :label => 'Alimentación biológica', :as => :boolean, :required => false %>
        <%= f.input :strength_flex, :label => 'Desarrollo de fuerza y flexibilidad', :as => :boolean, :required => false %>
        <%= f.input :stress, :label => 'Administración del estres', :as => :boolean, :required => false %>
        <%= f.input :breathing, :label => 'Respiración', :as => :boolean, :required => false %>
        <%= f.input :meditation, :label => 'Meditación', :as => :boolean, :required => false %>
    <% end %>

    <%= f.input :message, :as => :text, :label => 'Mensaje'%>

  <% end %>
  <% f.buttons do %>
     <%= f.commit_button 'Enviar' %>
  <% end %>
<% end %>